<div id="User_Create">
    <p id="notice">
        <%= notice %>
    </p>
    <% if flash[:alert] %>
        <p id="notice"><%= flash[:alert] %></p>
    <% end %>
    <%= form_tag do %>
        <fieldset>
            <legend>Please Log In</legend>
            <div>
                <%= label_tag :name, 'Name:' %>
                <%= text_field_tag :name, params[:name] %>
                <div>
                    <%= label_tag :password, 'Password:' %>
                    <%= password_field_tag :password, params[:password] %>
                </div>
                <div>
                    <%= submit_tag "Login" %>
                </div>
        </fieldset>
    <% end %>
            </div>
</div>
